<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".teacher_view.RatingActivity">
<Button
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button"
    android:text="Trở lại"
    android:id="@+id/btnBack"/>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung công việc"/>
    <EditText
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:id="@+id/txtTask"
        android:layout_height="80dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinh viên thực hiện"/>
        <EditText
            android:background="@drawable/rounded_edittext"
            android:layout_width="match_parent"
            android:id="@+id/txtStudent"
            android:layout_height="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các thiết bị"/>
        <LinearLayout
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/cbDevice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Máy chiếu" />

            <CheckBox
                android:id="@+id/cbDevice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều hòa" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/cbDevice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quạt" />

                <CheckBox
                    android:id="@+id/cbDevice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều khiển" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinh viên thực hiện"/>
        <EditText
            android:background="@drawable/rounded_edittext"
            android:layout_width="match_parent"
            android:id="@+id/txtReason"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <RadioGroup
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <RadioButton
               android:layout_marginRight="20dp"
               android:id="@+id/rdNotDone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Chưa hoàn thành"/>
           <RadioButton
               android:id="@+id/Done"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Chưa hoàn thành"/>
       </RadioGroup>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:text="Đánh giá"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:id="@+id/btnRating"/>
</LinearLayout>